<%- include('../../components/header.ejs') %>
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card mt-3">
                <div class="card-body">
                    <div class="card-title">
                        <h3>Lista de Restaurantes</h3>
                    </div>
                    <div class="mb-3">
                        <a class="btn btn-primary" href="/restaurantes/create"> + Restaurante</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre</th>
                                    <th>Descripción</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% restaurantes.forEach(restaurante => { %>
                                    <tr>
                                        <td><%= restaurante.id %></td>
                                        <td><%= restaurante.nombre %></td>
                                        <td><%= restaurante.descripcion %></td>
                                        <!-- boton para ver catalogo-->
                                         <td>
                                            <a class="btn btn-success" href="../hamburguesas/<%= restaurante.id %>">Ver Catalogo</a>
                                         </td>

                                        <td>
                                            <a class="btn btn-warning" href="/restaurantes/<%= restaurante.id %>/edit">Editar</a>
                                        </td>
                                        <td>
                                            <form method="post" action="/restaurantes/<%= restaurante.id %>/delete" onsubmit="return confirm('¿Está seguro que desea eliminar?')">
                                                <input class="btn btn-danger" type="submit" value="Eliminar">
                                            </form>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../../components/footer.ejs') %>
